# VoiceTriage Environment Variables

# Public URL of your local server (from ngrok/Cloudflare Tunnel), no trailing slash
PUBLIC_BASE_URL=https://your-ngrok-url.ngrok.io

# Twilio creds (optional if you skip signature validation)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# OpenAI for speech-to-text
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic for triage
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Dev flags
USE_STUBS=false   # set true to run without real API calls
PORT=8000
